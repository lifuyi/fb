# 应用配置
APP_NAME="Campus Connect"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# 数据库配置 - PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=campus_connect
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# 队列配置
QUEUE_CONNECTION=redis

# 缓存配置
CACHE_DRIVER=redis
CACHE_PREFIX=campus_connect

# 会话配置
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# 邮件配置（可选）
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@campus-connect.com"
MAIL_FROM_NAME="${APP_NAME}"

# 微信配置（需要申请）
WECHAT_OFFICIAL_ACCOUNT_APPID=your_wechat_appid
WECHAT_OFFICIAL_ACCOUNT_SECRET=your_wechat_secret
WECHAT_MINI_PROGRAM_APPID=your_mini_program_appid
WECHAT_MINI_PROGRAM_SECRET=your_mini_program_secret

# 阿里云OSS配置（可选）
OSS_ACCESS_KEY_ID=your_oss_access_key
OSS_ACCESS_KEY_SECRET=your_oss_secret
OSS_ENDPOINT=https://oss-cn-beijing.aliyuncs.com
OSS_BUCKET=campus-connect

# 日志配置
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug